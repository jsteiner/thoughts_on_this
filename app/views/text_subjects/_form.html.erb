<%= form_for @text_subject do |form| %>
  <%= render "shared/error_messages", :object => @text_subject %>

  <div class='control-group'>
    <%= text_field_tag 'discussion_name', nil, placeholder: "Name your discussion" %>
  </div>
  <div class='control-group'>
    <%= form.select :language, TextSubject::AVAILABLE_LANGUAGES %>
  </div>
  <div class='control-group'>
    <%= form.text_area :content %>
  </div>
  <div class='form-actions'>
    <%= form.submit 'Discuss', class: 'btn btn-primary' %>
  </div>
<% end %>
