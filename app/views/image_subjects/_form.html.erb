<%= form_for @image_subject do |form| %>
  <%= render "shared/error_messages", :object => @image_subject %>

  <div class='control-group'>
    <%= text_field_tag 'discussion_name', nil, placeholder: "Name your discussion" %>
  </div>
  <div class='control-group'>
    <%= form.file_field :image %>
  </div>
  <div class='form-actions'>
    <%= form.submit 'Discuss', class: 'btn btn-primary' %>
  </div>
<% end %>
