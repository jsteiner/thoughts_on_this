<section class='file'>
  <div class="section-wrap">
    <h2>Upload a file</h2>
    <%= render 'image_subjects/form' %>
  </div>
</section>
<section class="paste">
  <div class="section-wrap">
    <h2>Paste some text</h2>
    <%= render 'text_subjects/form' %>
  </div>
</section>
<div class="or"><h3>OR</h3></div>

<section class='history'>
  <h2>Your Discussions</h2>
  <ul id="discussions">
    <% @discussions.each do |discussion| %>
      <li><%= link_to discussion.name, discussion %> <%= time_ago_in_words(discussion.created_at) %> ago</li>
    <% end %>
  </ul>
</section>